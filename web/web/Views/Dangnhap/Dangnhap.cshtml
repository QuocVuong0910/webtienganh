
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Main.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/styles/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" />
</head>

<body>
    <!-- Form without bootstrap -->
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="auth-action-left">
                <div class="auth-form-outer">
                    <h2 class="auth-form-title">
                        Đăng nhập
                    </h2>
                    <div class="auth-external-container">
                        <div class="auth-external-list">                           
                        </div>
                    </div>
                    <form class="login-form">
                        <input type="text" class="auth-form-input" placeholder="Số điện thoại đã đăng ký">
                        @*<div class="input-icon">
                            <input type="password" class="auth-form-input" placeholder="Password">
                            <i class="fa fa-eye show-password"></i>
                        </div>*@
                        <div class="footer-action">
                            <input type="submit" value="Đăng nhập" class="auth-submit">
                            <a href="/Dangnhap/Dangky" class="auth-btn-direct">Đăng ký</a>
                        </div>
                    </form>
                    @*<div class="auth-forgot-password">
                        <a href="#">Forfot Password</a>
                    </div>*@
                </div>
            </div>
            <div class="auth-action-right">
                <div class="auth-image">
                    <img src="~/Content/images/demo/bia/el.jpg" alt="login">
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/scripts/common.js"></script>
</body>
</html>
